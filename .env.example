# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3003

# Database
DATABASE_URL="file:./dev.db"

# Authentication
BETTER_AUTH_SECRET="your-secret-key-here-change-in-production"

# Email Configuration (Optional - for magic link authentication)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
EMAIL=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM="Serve File Storage"

# Upload limits
# Server-side max file size in MB (used by API routes and validation)
MAX_FILE_SIZE=10
# Client-side max file size in MB (used by dropzone and UI). Must match MAX_FILE_SIZE.
NEXT_PUBLIC_MAX_FILE_SIZE=10

# File storage (project-root path or absolute)
# e.g. UPLOAD_DIR=uploads (will resolve to <project>/uploads)
UPLOAD_DIR=uploads

# Image optimization
# Max dimension (px) for optimized originals; larger images are downscaled before encoding
ORIGINAL_MAX_DIM=2560
PLACEHOLDER_QUALITY=60